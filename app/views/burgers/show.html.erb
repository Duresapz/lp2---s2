  <tr>
    <td>Nutriment</td>
    <td>Valeur</td>
  </tr>
  <% @burger.nutriments.each do |nutri| %>
    <tr>
      <td><%= nutri[0] %></td>
      <td><%= nutri[1] %></td>
    </tr>
  <% end %>
</table>

